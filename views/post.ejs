<% include header %>
  	<main id="main">
		<% post.forEach(function(data){ %>
			<article class="post">
				<header class="post-header">
					<h3 class="post-title">
						<span class="post-title-link">
						<%= data.title %>
						</span>
					</h3>
					<div class="post-meta">
						<!--<%= data.tags %>-->
						<time class="post-date" datetime="<%= data.time %>"><%= new Date(Number(data.time)).toDateString() %></time>
						<span class="post-views" style="display:none"><%= data.views %> VIEWS</span>
					</div>
				</header>
				<section class="post-markdown">
						<%- data.content %>
				</section>
			</article>
		<nav class="pagination" role="navigation">
			<span class="left"><i class="fa fa-map-marker"></i>&nbsp;&nbsp;<%= data.location %></span>
      		<a class="button older-posts right" style="display:none">Share</a>
		</nav>
		<% }) %>
  	</main>
<% include footer %>