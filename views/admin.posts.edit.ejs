<% include header %>
  	<main class="admin">
  		<% include admin.nav.ejs %>
  		<% if(!!notification){ %>
	  		<div class="admin-inner-nav">
	  			<span>&gt;&nbsp;<%= notification %></span>
	  		</div>
	  	<% } %>
  		<form action="" method="post">
	  		<div class="line" style="position:relative">
	  			<input class="control button-normal" type="submit" value="SAVE" style="width:70px" />
	  			<div class="line-clear" style="position:absolute;left:75px;right:0;margin-top:1px;padding-right:17px">
					<input class="control" type="text" name="title" value="<%= posts[0].title %>" style="width:100%"/>
				</div>
			</div>
			<div class="line" style="position:relative">
				<div class="line-clear" style="display:block;padding:0 17px 0 75px;">
					<textarea class="control posts-content" type="textarea" rows="20" style="width:100%">
						<%= posts[0].content %>
					</textarea>
				</div>
			</div>
		</form>
  	</main>
<% include footer %>